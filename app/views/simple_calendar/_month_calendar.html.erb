<div class="simple-calendar">
  <div class="calendar-heading bg-light p-3 mb-3 d-flex justify-content-between align-items-center">
    <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title h4 mb-0">
      <%= t('date.month_names')[start_date.month] %> <%= start_date.year %>
    </time>

    <nav class="mt-2">
      <%= link_to t('simple_calendar.previous', default: 'Previous'), calendar.url_for_previous_view, class: "btn btn-outline-primary mr-2" %>
      <%= link_to t('simple_calendar.today', default: 'Today'), calendar.url_for_today_view, class: "btn btn-outline-success" %>
      <%= link_to t('simple_calendar.next', default: 'Next'), calendar.url_for_next_view, class: "btn btn-outline-primary" %>
    </nav>
  </div>

<table class="table table-bordered table-striped">
    <thead class="thead-light">
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th scope="col" class="text-center"><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
