<%if params["controller"] == "escalas" %><%start_date = @escala.mes_ref%><%end%>

<div class="simple-calendar">
  <div class="calendar-heading bg-light p-3 mb-3 d-flex justify-content-between align-items-center">
    <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title h4 mb-0">
      <%= t('date.month_names')[start_date.month] %> <%= start_date.year %>
    </time>

    <%if params["controller"] == "escalas" %><span class= mt-2><%= @escala.setor %></span><%else%>

    <nav class="mt-2">
      <%= link_to t('simple_calendar.previous', default: '<'), calendar.url_for_previous_view, class: "btn btn-outline-primary mr-2" %>
      <%= link_to t('simple_calendar.today', default: 'Atual'), calendar.url_for_today_view, class: "btn btn-outline-success" %>
      <%= link_to t('simple_calendar.next', default: '>'), calendar.url_for_next_view, class: "btn btn-outline-primary" %>
    </nav>

    <%end%>
  </div>

<table class="table table-bordered table-striped">
    <thead class="thead-light">
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th scope="col" class="text-center"><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>

      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
            <%= day.strftime('%d') %>
            <%if params["controller"] == "escalas"%>
            <%@jornadas.each do |jornada| %>
                <%if day == jornada.data%>
                  <div class><p><%= jornada.turno + " - " + @users.find(jornada.user_id).first_name + " " + @users.find(jornada.user_id).last_name%></p></div>
                <%end%>
              <%end%>
              <%if @escala.id_medico_adm == current_user.id%>
                <%= link_to 'Adicionar Jornada', new_jornada_path(escala_id: @escala.id, data: day) %>
              <%end%>
            <%end%>
            <%if params["controller"] == "home"%>
              <%current_user.escalas.each do |escala|%>
                <%escala.jornadas.each do |jornada|%>
                  <%if day == jornada.data and jornada.user_id == current_user.id%>
                    <p><%= jornada.turno%></p>
                    <p><%= @escala.find(jornada.escala_id).setor%></p>
                  <%end%>
                <%end%>
              <%end%>
            <% end %>
          <% end %>
          <%end%>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
