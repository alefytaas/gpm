
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: escala, local: true, html: { class: "form" }) do |form| %>
      <%= form.hidden_field :id_medico_adm, value: current_user.id %>
        <% if escala.errors.any? %>
          <div class="alert alert-danger">
            <h2><%= pluralize(escala.errors.count, "error") %> prohibited this escala from being saved:</h2>

            <ul>
              <% escala.errors.full_messages.each do |error_message| %>
                <li><%= error_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :setor, class: "form-label" %>
          <%= form.text_field :setor, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :mes_ref, class: "form-label" %>
          <%= form.date_select :mes_ref, {
            order: [:month, :year],
            start_year: Date.current.year,
            end_year: Date.current.year + 10,
            default: { day: 1 }
            }, class: "form-control" %>
        </div>

       <div class="mb-3">
  <%= form.label :users, "Médicos:", class: "form-label" %>
  <div>
    <% @Medicos.each do |medico| %>
      <div class="form-check">
        <% always_selected = medico.id == current_user.id %> <!-- Exemplo baseado em um atributo `role` -->
        <% checked = always_selected %>
        <%= check_box_tag "escala[user_ids][]", medico.id, checked, class: "form-check-input", id: "user_#{medico.id}" %>
        <%= label_tag "user_#{medico.id}", medico.first_name + " " + medico.last_name, class: "form-check-label" %>
      </div>
    <% end %>
    
  </div>
</div>


        

        <div class="text-center mb-3"> <!-- Adicionando margem embaixo do botão -->
          <%= form.submit "Save", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
